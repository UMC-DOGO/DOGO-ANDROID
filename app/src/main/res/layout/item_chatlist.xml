<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="11dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/chat_profile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_profile_50"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/chat_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="2sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/chat_profile_iv"
        app:layout_constraintBottom_toTopOf="@id/chat_content_tv"
        app:layout_constraintStart_toEndOf="@id/chat_profile_iv"/>
    <TextView
        android:id="@+id/chat_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채팅 내용"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#000000"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="4sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@id/chat_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/chat_profile_iv"
        app:layout_constraintStart_toEndOf="@id/chat_profile_iv"/>
    <TextView
        android:id="@+id/chat_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 12:00"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#000000"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="8sp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/chat_content_tv"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@id/chat_profile_iv"/>
</androidx.constraintlayout.widget.ConstraintLayout>