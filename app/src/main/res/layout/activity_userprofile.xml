<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    android:paddingTop="24dp">
    <ImageView
        android:id="@+id/userprofile_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/userprofile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="-2sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>


    <ImageView
        android:id="@+id/userprofile_profile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_profile_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_tv"
        android:layout_marginTop="30dp" />
    <TextView
        android:id="@+id/userprofile_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#000000"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="-2sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/userprofile_profile_iv"
        app:layout_constraintTop_toTopOf="@id/userprofile_profile_iv"
        app:layout_constraintStart_toEndOf="@id/userprofile_profile_iv"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/userprofile_message_btn"
        android:layout_width="87dp"
        android:layout_height="37dp"
        android:background="@drawable/btn_profile_message"
        android:text="메시지"
        android:textStyle="normal"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="9sp"
        android:gravity="right|center"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="@id/userprofile_profile_iv"
        app:layout_constraintTop_toTopOf="@id/userprofile_profile_iv"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/userprofile_intro_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="한 줄 소개입니다."
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="#000000"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="7sp"
        android:background="#F8F8F8"
        android:gravity="center"
        android:paddingHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_profile_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>
    <View
        android:id="@+id/userprofile_v1"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/userprofile_intro_tv"
        android:layout_marginTop="12dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userprofile_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_v1"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/userprofile_address_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_setup_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거주지"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="#000000"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="2sp"
            app:layout_constraintStart_toEndOf="@+id/userprofile_address_iv"
            app:layout_constraintTop_toTopOf="@+id/userprofile_address_iv"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/userprofile_address_et"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/shape_button_5r"
            android:backgroundTint="@color/sub"
            android:text="경기도 부천시 역곡동"
            android:textSize="18sp"
            android:textColor="#000000"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="2sp"
            android:enabled="false"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/userprofile_address_iv"
            android:layout_marginTop="8dp"/>
        <View
            android:id="@+id/userprofile_v2"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/userprofile_address_et"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/userprofile_info_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_setup_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userprofile_v2"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주인정보"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="#000000"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="2sp"
            app:layout_constraintStart_toEndOf="@+id/userprofile_info_iv"
            app:layout_constraintTop_toTopOf="@+id/userprofile_info_iv"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/userprofile_age_et"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/shape_button_5r"
            android:backgroundTint="@color/sub"
            android:text="42세"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/userprofile_info_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/userprofile_gender_et"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/shape_button_5r"
            android:backgroundTint="@color/sub"
            android:text="여성"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toTopOf="@+id/userprofile_age_et"
            app:layout_constraintStart_toEndOf="@+id/userprofile_age_et"
            android:layout_marginLeft="8dp"/>
        <View
            android:id="@+id/userprofile_v3"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/userprofile_gender_et"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/userprofile_dog_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_setup_dog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userprofile_v3"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="반려동물 정보"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="#000000"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="2sp"
            app:layout_constraintStart_toEndOf="@+id/userprofile_dog_iv"
            app:layout_constraintTop_toTopOf="@+id/userprofile_dog_iv"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/userprofile_dog_et"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/shape_button_5r"
            android:backgroundTint="@color/sub"
            android:text="포메라니안"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/userprofile_dog_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/userprofile_dogage_et"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/shape_button_5r"
            android:backgroundTint="@color/sub"
            android:text="3세"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toTopOf="@+id/userprofile_dog_et"
            app:layout_constraintStart_toEndOf="@+id/userprofile_dog_et"
            android:layout_marginLeft="8dp"/>
        <View
            android:id="@+id/userprofile_v4"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/userprofile_dog_et"
            android:layout_marginTop="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/userprofile_post_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_profile_post"
        app:layout_constraintTop_toBottomOf="@id/userprofile_cl"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내가 쓴 글"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#000000"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="2sp"
        app:layout_constraintStart_toEndOf="@+id/userprofile_post_iv"
        app:layout_constraintTop_toTopOf="@+id/userprofile_post_iv"
        android:layout_marginLeft="10dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/userprofile_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userprofile_post_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>
    <View
        android:id="@+id/userprofile_v5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/userprofile_tab"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/userprofile_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_tab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>