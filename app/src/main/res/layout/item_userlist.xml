<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/userlist_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글제목"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="6sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/userlist_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022/12/25 17:30"
        android:textStyle="normal"
        android:textSize="10sp"
        android:textColor="#6e6e6e"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="12sp"
        app:layout_constraintStart_toStartOf="@id/userlist_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/userlist_img_iv"/>
    <ImageView
        android:id="@+id/userlist_img_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_button_5r"
        android:backgroundTint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/userlist_img_iv"/>
</androidx.constraintlayout.widget.ConstraintLayout>